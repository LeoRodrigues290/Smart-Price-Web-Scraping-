rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false; // Padrão fechado
    }
    
    // Coleção searches: Apenas Backend (Admin SDK bypass rules) ou usuário autenticado
    match /searches/{searchId} {
       allow read: if true; // Exemplo: permitir leitura pública para histórico
       allow write: if false; // Escrita apenas via Backend
    }
  }
}
